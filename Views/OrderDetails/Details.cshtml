@model ArtGalleryOnline.Models.OrderDetail

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    /* ... Các phần CSS khác ... */

    /* CSS cho các thẻ dt và dd */
    .info-section dl dt {
        font-weight: bold;
        font-size: 18px; /* Cỡ chữ của nhãn */
        color: #000; /* Màu chữ của nhãn */
    }

    .info-section dl dd {
        margin-bottom: 10px;
        font-size: 16px; /* Cỡ chữ của dữ liệu */
        color: #fff; /* Màu chữ của dữ liệu */
    }

    /* ... Các phần CSS khác ... */
</style>




<style>
    body {
        background-image: url(/ManagerUser/images/bg.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .wcskh-info .avatar {
        width: 190px;
        height: 190px;
        overflow: hidden;
        border-radius: 20px;
        padding: 5px;
        background-color: #fff;
        border: solid 1px #ddd;
        grid-area: avatar;
    }

    .wcskh-info .name {
        height: 60px;
        line-height: 60px;
        grid-area: name;
    }

        .wcskh-info .name h3 {
            font-size: 1.8em;
            color: #fff;
            line-height: inherit;
            float: left;
        }

    .wcskh-info .avatar img {
        width: 100%;
        height: auto;
        border-radius: inherit;
    }

    .wcskh-content {
        margin-top: 35px;
        display: grid;
        min-height: 500px;
        grid-template-columns: 1fr 2fr; /* Chia thành hai cột với tỷ lệ 1:2 */
        grid-gap: 20px; /* Khoảng cách giữa hai cột */
        padding: 20px;
    }


    .tabs-cskh {
        box-shadow: 5px 0px 20px 0px rgba(0, 0, 0, 0.1);
        padding: 10px;
    }

        .tabs-cskh ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .tabs-cskh li {
            margin-bottom: 10px;
        }

        .tabs-cskh a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 5px;
        }

            .tabs-cskh a:hover {
                background-color: #444;
            }

    .info-section {
        padding: 20px;
    }

        .info-section h1 {
            margin-top: 0;
            color: #ff0000; /* Màu đỏ (#ff0000) */
            font-size: 24px; /* Cỡ chữ 24px */
            font-weight: normal; /* Kiểu chữ bình thường */
            text-align: center; /* Căn giữa văn bản */
            font-family: Arial, sans-serif; /* Kiểu chữ Arial hoặc các kiểu chữ không có chân chống (sans-serif) */
        }

        .info-section dl dt {
            font-weight: bold;
        }

        .info-section dl dd {
            margin-bottom: 10px;
        }

    .btn-group {
        margin-top: 20px;
    }

    * {
        outline: none;
    }

    div {
        display: block;
    }

    .tabs-cskh li:hover {
        background-color: #555;
    }

    .tabs-cskh a {
        color: #fff;
        text-decoration: none;
        display: block;
        padding: 5px;
    }

    .tabs-cskh .active {
        background-color: orange; /* Màu cam khi mục được click */
    }

    .tabs-cskh a:hover {
        background-color: #444;
    }

    /* Ẩn danh sách con mặc định */
    ul.menu .dropdown {
        display: none;
    }

    /* Hiển thị danh sách con khi hover vào mục cha "Author" */
    ul.menu li:hover .dropdown {
        display: block;
        /* Các thuộc tính CSS khác bạn muốn áp dụng khi hiển thị danh sách con */
    }

</style>

<section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(/img/code-mg/hinh47.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content text-center">
                    <h2 class="page-title">List Order</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="~/Home"><i class="icon_house_alt"></i> Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">List Order</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="sec-body">
    <div class="container">
        <div class="wcskh">
            <div class="wcskh-content row">
                <div class=" tabs-cskh">
                    <ul class="menu">
                        <li>
                            @(await Component.InvokeAsync("EditUsers"))
                        </li>
                        <li>
                            @(await Component.InvokeAsync("OrderDetailsUser"))
                        </li>

                        <li>
                            <a href="#">Author</a>
                            <ul class="dropdown">
                                <li><a asp-area="" asp-controller="ViewAuthorCreateCategory" asp-action="Create">- Category</a></li>
                                <li><a asp-area="" asp-controller="ViewAuthorCreaAuthorWorks" asp-action="Create">- Author</a></li>
                                <li><a asp-area="" asp-controller="ViewAuthorCreateWork" asp-action="Create">- Work</a></li>

                            </ul>
                        </li>

                    </ul>

                </div>
                <div class=" info-section">
                    <h1> Details</h1>
                    <dl class="row justify-content-center">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Orders)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Orders.OrderId)
                        </dd>
                        <dt class="col-sm-2">
                           TotalAmont:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Orders.TotalAmount)
                        </dd>
                        <dt class="col-sm-2">
                           Name:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Orders.RecipientName)
                        </dd>
                        <dt class="col-sm-2">
                            Email:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Orders.RecipientEmail)
                        </dd>
                        <dt class="col-sm-2">
                           Address:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Orders.ShippingAddress)
                        </dd>
                        <dt class="col-sm-2">
                            Phone:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Orders.RecipientPhone)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ArtWork)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ArtWork.ArtDescription)
                        </dd>
                        <dt class="col-sm-2">
                           Image
                        </dt>
                        <dd class="col-sm-10">
                            <img src="~/@Model.ArtWork.ArtImage" alt="ArtImage" style="width:100px; height:auto;" />
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    // Sử dụng JavaScript để thêm sự kiện click vào các mục <li> trong tabs-cskh
    const tabsCskhItems = document.querySelectorAll('.tabs-cskh li');
    tabsCskhItems.forEach(item => {
        item.addEventListener('click', () => {
            // Xóa lớp active của tất cả các mục <li> trong tabs-cskh
            tabsCskhItems.forEach(item => {
                item.classList.remove('active');
            });

            // Thêm lớp active cho mục được click
            item.classList.add('active');
        });
    });
</script>