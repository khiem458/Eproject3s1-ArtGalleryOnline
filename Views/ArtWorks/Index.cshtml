@model IEnumerable<ArtGalleryOnline.Models.ArtWork>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <h1 class="card-title text-center">Index</h1>
        <div class="text-right">
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            </p>
        </div>
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StockQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AuthorArtWork)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArtName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArtDescription)
                        </td>
                        <td>
                            <img src="~/@item.ArtImage" alt="ArtImage" style="width:100px; height:auto;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArtPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuthorArtWork.Artist)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ArtId" class="btn btn-primary">Edit</a>|
                            <a asp-action="Details" asp-route-id="@item.ArtId" class="btn btn-secondary">Details</a>|
                            <a asp-action="Delete" asp-route-id="@item.ArtId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
