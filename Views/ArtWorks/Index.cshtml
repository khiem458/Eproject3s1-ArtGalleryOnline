@model IEnumerable<ArtGalleryOnline.Models.ArtWork>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* CSS for black background */
    .container.mt-4 {
        padding: 20px; /* You can adjust the padding as needed */
    }

    /* Additional styles for the card */
    .card {
        border: none; /* Remove the card border */
    }

    /* Styles for the card header */
    .card-header {
        background-color: #343a40; /* Set header background color */
        color: white; /* Set header text color */
        padding: 10px 15px; /* Add some padding */
        border-bottom: none; /* Remove the bottom border */
    }

    /* Styles for the card title */
    .card-title {
        margin: 0; /* Remove margin for the title */
        font-size: 24px; /* Set the font size */
    }

    /* Styles for the "Create New" button */
    .text-right .btn-primary {
        background-color: #007bff; /* Set button background color */
        border-color: #007bff; /* Set button border color */
    }

    /* Styles for the table */
    .table {
        background-color: #f8f9fa; /* Set table background color */
    }

        /* Styles for the table headers */
        .table th {
            background-color: #343a40; /* Set header background color */
            color: white; /* Set header text color */
        }

        /* Styles for the table rows */
        .table tr {
            background-color: white; /* Set row background color */
        }

    /* Styles for the buttons in table cells */
    .btn-primary.btn-sm, .btn-info.btn-sm, .btn-danger.btn-sm, .btn-success.btn-sm {
        margin-right: 5px; /* Add some space between buttons */
    }

    /* Disable the "Đã xác nhận" button */
    .btn-success[disabled] {
        opacity: 0.6;
    }
</style>
<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-header">
            <h1 class="card-title ">Manager Work</h1>
            <div class="text-right">
                <p>
                    <a asp-action="Create" class="btn btn-primary">Create New</a>
                </p>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="datatablesSimple" class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtImage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArtPrice)
                    </th>                  
                    <th>
                        @Html.DisplayNameFor(model => model.AuthorArtWork)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArtName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArtDescription)
                        </td>
                        <td>
                            <img src="~/@item.ArtImage" alt="ArtImage" style="width:100px; height:auto;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArtPrice)
                        </td>                     
                        <td>
                            @Html.DisplayFor(modelItem => item.AuthorArtWork.Artist)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ArtId" class="btn btn-primary">Edit</a>|
                            <a asp-action="Details" asp-route-id="@item.ArtId" class="btn btn-secondary">Details</a>|
                            <a asp-action="Delete" asp-route-id="@item.ArtId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
</div>