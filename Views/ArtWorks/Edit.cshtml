@model ArtGalleryOnline.Models.ArtWork

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>ArtWork</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ArtId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArtName" class="control-label"></label>
                <input asp-for="ArtName" class="form-control" />
                <span asp-validation-for="ArtName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtDescription" class="control-label"></label>
                <input asp-for="ArtDescription" class="form-control" />
                <span asp-validation-for="ArtDescription" class="text-danger"></span>
            </div>
            <!-- Hiển thị hình ảnh hiện tại (nếu có) -->
            @if (!string.IsNullOrEmpty(Model.ArtImage))
            {
                <div class="form-group">
                    <label>Hình ảnh hiện tại</label>
                    <img src="~/@Model.ArtImage" class="img-thumbnail" />
                </div>
            }
            <div class="form-group">
                <label asp-for="ArtImage" class="control-label"></label>
                <input asp-for="ArtImage" type="file" class="form-control" />
                <span asp-validation-for="ArtImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtPrice" class="control-label"></label>
                <input asp-for="ArtPrice" class="form-control" />
                <span asp-validation-for="ArtPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthId" class="control-label"></label>
                <select asp-for="AuthId" class="form-control" asp-items="ViewBag.AuthId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
