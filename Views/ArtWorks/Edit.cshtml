@model ArtGalleryOnline.Models.ArtWork

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<div class="card mb-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
                <div class="card-body">
                    <h4 class="card-title">ArtWork</h4>
                    <hr />
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ArtId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="ArtName" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="ArtName" class="form-control" />
                                <span asp-validation-for="ArtName" class="text-danger"></span>
                            </div>
                        </div>
                    <div class="form-group row">
                        <label asp-for="ArtDescription" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="ArtDescription" class="form-control" />
                            <span asp-validation-for="ArtDescription" class="text-danger"></span>
                        </div>
                    </div>
                        <div class="form-group row">
                        <label asp-for="ArtPrice" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="ArtPrice" class="form-control" />
                                <span asp-validation-for="ArtPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                        <label asp-for="AuthId" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                            <select asp-for="AuthId" class="form-control" asp-items="ViewBag.AuthId"></select>
                            <span asp-validation-for="AuthId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                        <label asp-for="ArtImage" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                            <input type="file" asp-for="ArtImage" class="form-control" />
                            <span asp-validation-for="ArtImage" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <img src="~/@Model.ArtImage" alt="Art Image" style="max-width: 300px; max-height: 300px;" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
