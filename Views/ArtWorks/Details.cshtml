@model ArtGalleryOnline.Models.ArtWork

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* ... Các phần CSS khác ... */

    /* CSS cho các thẻ dt và dd */
    .info-section dl dt {
        font-weight: bold;
        font-size: 18px; /* Cỡ chữ của nhãn */
        color: #000; /* Màu chữ của nhãn */
    }

    .info-section dl dd {
        margin-bottom: 10px;
        font-size: 16px; /* Cỡ chữ của dữ liệu */
        color: #fff; /* Màu chữ của dữ liệu */
    }

    /* ... Các phần CSS khác ... */
</style>

<div class=" info-section">
    <h1>User Details</h1>
    <dl class="row justify-content-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtDescription)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorArtWork)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorArtWork.Artist)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtImage)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.ArtImage" alt="ArtImage" style="width:100px; height:auto;" />
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArtId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
