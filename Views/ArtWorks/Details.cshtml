@model ArtGalleryOnline.Models.ArtWork

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card mb-4">
    <div class="card-body">
        <h1 class="card-title text-center">Details</h1>
    
        <dl class="row justify-content-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtImage)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.ArtImage" alt="ArtImage" style="width:100px; height:auto;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorArtWork)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorArtWork.Artist)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArtId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
</div>