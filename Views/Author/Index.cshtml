@model IEnumerable<ArtGalleryOnline.Models.AuthorArtWork>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthDesciption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthDesciption)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AuthId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
