@model ArtGalleryOnline.Models.Orders

@{
    ViewData["Title"] = "Details";
}

<style>
    .wcskh-info .avatar {
        width: 190px;
        height: 190px;
        overflow: hidden;
        border-radius: 20px;
        padding: 5px;
        background-color: #fff;
        border: solid 1px #ddd;
        grid-area: avatar;
    }

    .wcskh-info .name {
        height: 60px;
        line-height: 60px;
        grid-area: name;
    }

        .wcskh-info .name h3 {
            font-size: 1.8em;
            color: #fff;
            line-height: inherit;
            float: left;
        }

    .wcskh-info .avatar img {
        width: 100%;
        height: auto;
        border-radius: inherit;
    }

    .wcskh-content {
        background-color: #fff;
        border: solid 1px #eee;
        margin-top: 35px;
        display: grid;
        min-height: 500px;
        grid-template-columns: 1fr 2fr; /* Chia thành hai cột với tỷ lệ 1:2 */
        grid-gap: 20px; /* Khoảng cách giữa hai cột */
        padding: 20px;
    }


    .tabs-cskh {
        background-color: #222;
        box-shadow: 5px 0px 20px 0px rgba(0, 0, 0, 0.1);
        padding: 10px;
    }

        .tabs-cskh ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .tabs-cskh li {
            margin-bottom: 10px;
        }

        .tabs-cskh a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 5px;
        }

            .tabs-cskh a:hover {
                background-color: #444;
            }

    .info-section {
        background-color: #fff;
        border: solid 1px #eee;
        padding: 20px;
    }

        .info-section h1 {
            margin-top: 0;
        }

        .info-section dl dt {
            font-weight: bold;
        }

        .info-section dl dd {
            margin-bottom: 10px;
        }

    .btn-group {
        margin-top: 20px;
    }

    * {
        outline: none;
    }

    div {
        display: block;
    }

    .tabs-cskh li:hover {
        background-color: #555;
    }

    .tabs-cskh a {
        color: #fff;
        text-decoration: none;
        display: block;
        padding: 5px;
    }

    .tabs-cskh .active {
        background-color: orange; /* Màu cam khi mục được click */
    }

    .tabs-cskh a:hover {
        background-color: #444;
    }

</style>

<section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(/img/code-mg/hinh16.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content text-center">
                    <h2 class="page-title">Shop</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="~/Home"><i class="icon_house_alt"></i> Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Shop</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="sec-body">
    <div class="container">
        <div class="wcskh">
            <div class="wcskh-content row">
                <div class=" tabs-cskh">
                    <ul>
                        <li class="active">
                            <a href="">Manager User</a>
                        </li>
                        <li>
                            @(await Component.InvokeAsync("OrderUser"))
                        </li>
                        <li>
                            <a href="">Register Author</a>
                        </li>

                    </ul>
                </div>
                <div class=" info-section">
                    <h1 class="text-center">Order Details</h1>
                    <div>
                      
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.OrderDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.OrderDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RequestStatus)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RequestStatus)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Quantity)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Quantity)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TotalAmount)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TotalAmount)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RecipientName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RecipientName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ShippingAddress)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ShippingAddress)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RecipientPhone)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RecipientPhone)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.RecipientEmail)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.RecipientEmail)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TypePayment)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TypePayment)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.User)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.User.UserEmail)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<div>

    <a asp-action="Index">Back to List</a>
</div>
<script>
    // Sử dụng JavaScript để thêm sự kiện click vào các mục <li> trong tabs-cskh
    const tabsCskhItems = document.querySelectorAll('.tabs-cskh li');
    tabsCskhItems.forEach(item => {
        item.addEventListener('click', () => {
            // Xóa lớp active của tất cả các mục <li> trong tabs-cskh
            tabsCskhItems.forEach(item => {
                item.classList.remove('active');
            });

            // Thêm lớp active cho mục được click
            item.classList.add('active');
        });
    });
</script>



