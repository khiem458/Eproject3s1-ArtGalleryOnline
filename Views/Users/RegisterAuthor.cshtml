@model ArtGalleryOnline.Models.Users

@{
    ViewData["Title"] = "RegisterAuthor";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}


   
<style>
    body {
        background-image: url(/ManagerUser/images/bg.jpg);
        background-repeat: no-repeat;
        background-size: cover;
    }

    .wcskh-info .avatar {
        width: 190px;
        height: 190px;
        overflow: hidden;
        border-radius: 20px;
        padding: 5px;
        background-color: #fff;
        border: solid 1px #ddd;
        grid-area: avatar;
    }

    .wcskh-info .name {
        height: 60px;
        line-height: 60px;
        grid-area: name;
    }

        .wcskh-info .name h3 {
            font-size: 1.8em;
            color: #fff;
            line-height: inherit;
            float: left;
        }

    .wcskh-info .avatar img {
        width: 100%;
        height: auto;
        border-radius: inherit;
    }

    .wcskh-content {
        margin-top: 35px;
        display: grid;
        min-height: 500px;
        grid-template-columns: 1fr 2fr; /* Chia thành hai cột với tỷ lệ 1:2 */
        grid-gap: 20px; /* Khoảng cách giữa hai cột */
        padding: 20px;
    }


    .tabs-cskh {
        box-shadow: 5px 0px 20px 0px rgba(0, 0, 0, 0.1);
        padding: 10px;
    }

        .tabs-cskh ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .tabs-cskh li {
            margin-bottom: 10px;
        }

        .tabs-cskh a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 5px;
        }

            .tabs-cskh a:hover {
                background-color: #444;
            }

    .info-section {
        padding: 20px;
    }

        .info-section h1 {
            margin-top: 0;
            color: #ff0000; /* Màu đỏ (#ff0000) */
            font-size: 24px; /* Cỡ chữ 24px */
            font-weight: normal; /* Kiểu chữ bình thường */
            text-align: center; /* Căn giữa văn bản */
            font-family: Arial, sans-serif; /* Kiểu chữ Arial hoặc các kiểu chữ không có chân chống (sans-serif) */
        }

        .info-section dl dt {
            font-weight: bold;
        }

        .info-section dl dd {
            margin-bottom: 10px;
        }

    .btn-group {
        margin-top: 20px;
    }

    * {
        outline: none;
    }

    div {
        display: block;
    }

    .tabs-cskh li:hover {
        background-color: #555;
    }

    .tabs-cskh a {
        color: #fff;
        text-decoration: none;
        display: block;
        padding: 5px;
    }

    .tabs-cskh .active {
        background-color: orange; /* Màu cam khi mục được click */
    }

    .tabs-cskh a:hover {
        background-color: #444;
    }

    /* Ẩn danh sách con mặc định */
    ul.menu .dropdown {
        display: none;
    }

    /* Hiển thị danh sách con khi hover vào mục cha "Author" */
    ul.menu li:hover .dropdown {
        display: block;
        /* Các thuộc tính CSS khác bạn muốn áp dụng khi hiển thị danh sách con */
    }

</style>

<section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(/img/code-mg/hinh16.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content text-center">
                    <h2 class="page-title">Shop</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="~/Home"><i class="icon_house_alt"></i> Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Shop</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="sec-body">
    <div class="container">
        <div class="wcskh">
            <div class="wcskh-content row">
                <div class=" tabs-cskh">
                    <ul>
                        <li >
                            @(await Component.InvokeAsync("EditUsers"))
                        </li>
                        <li>
                            @(await Component.InvokeAsync("OrderUser"))
                        </li>
                        

                    </ul>
                </div>
                <div class=" info-section">
                    <h1 class="text-center">Register Author</h1>
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="UserId" />
                                <div class="form-group">
                                    <label asp-for="UserName" class="control-label"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserFullName" class="control-label"></label>
                                    <input asp-for="UserFullName" class="form-control" />
                                    <span asp-validation-for="UserFullName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserEmail" class="control-label"></label>
                                    <input asp-for="UserEmail" class="form-control" />
                                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserGender" class="control-label"></label>
                                    <input asp-for="UserGender" class="form-control" />
                                    <span asp-validation-for="UserGender" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserAge" class="control-label"></label>
                                    <input asp-for="UserAge" class="form-control" />
                                    <span asp-validation-for="UserAge" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserPhoneNum" class="control-label"></label>
                                    <input asp-for="UserPhoneNum" class="form-control" />
                                    <span asp-validation-for="UserPhoneNum" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserAddress" class="control-label"></label>
                                    <input asp-for="UserAddress" class="form-control" />
                                    <span asp-validation-for="UserAddress" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserPassword" class="control-label"></label>
                                    <input asp-for="UserPassword" class="form-control" />
                                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserRole" class="control-label"></label>
                                    <select asp-for="UserRole" class="form-control"></select>
                                        <option value="author" selected>Author</option>
                                    <span asp-validation-for="UserRole" class="text-danger"></span>
                                </div>

                                <div class="form-group text-center">
                                    <!-- Đưa nút vào giữa -->
                                    <input type="submit" value="Register Author" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
<script>
    // Sử dụng JavaScript để thêm sự kiện click vào các mục <li> trong tabs-cskh
    const tabsCskhItems = document.querySelectorAll('.tabs-cskh li');
    tabsCskhItems.forEach(item => {
        item.addEventListener('click', () => {
            // Xóa lớp active của tất cả các mục <li> trong tabs-cskh
            tabsCskhItems.forEach(item => {
                item.classList.remove('active');
            });

            // Thêm lớp active cho mục được click
            item.classList.add('active');
        });
    });
</script>




