@model ArtGalleryOnline.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* ... Các phần CSS khác ... */

    /* CSS cho các thẻ dt và dd */
    .info-section dl dt {
        font-weight: bold;
        font-size: 18px; /* Cỡ chữ của nhãn */
        color: #000; /* Màu chữ của nhãn */
    }

    .info-section dl dd {
        margin-bottom: 10px;
        font-size: 16px; /* Cỡ chữ của dữ liệu */
        color: #fff; /* Màu chữ của dữ liệu */
    }

    /* ... Các phần CSS khác ... */
</style>


<div class="card mb-4">
    <div class="card-body">
        <h1 class="card-title text-center">Details</h1>
        <dl class="row justify-content-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
</div>