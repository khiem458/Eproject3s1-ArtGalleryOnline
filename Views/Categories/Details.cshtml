}



<div class="card mb-4">
    <div class="card-body">
        <h1 class="card-title text-center">Details</h1>
        <dl class="row justify-content-center">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
