@model ArtGalleryOnline.Models.Blog
@{
    ViewData["Title"] = "BlogDetails";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	body{
		background: Black; /* Replace 'wooden-background.jpg' with the actual path to your wooden background image */
		background-size: cover;
		background-repeat: no-repeat;
	}
	
	.single-left1 .img-responsive {
		max-width: 60%;
		max-height: 50%;
		margin-top: 78px;
		position: relative; /* Sử dụng relative positioning để dịch chuyển hình ảnh */
		left: 30%; /* Di chuyển ảnh sang bên trái 50% so với phần tử cha */
		transform: translateX(-50%); 
	}

	.single-left1 {
		text-align: center; /* Căn giữa các phần tử con theo chiều ngang */
	}

	
	.img-responsive {
		height: 553px;
	}

	.Mota {
		display: flex; /* Sử dụng flexbox để căn giữa văn bản theo chiều dọc */
		max-width: 956px;
		margin: 0 auto;
		color: aliceblue;
		text-align: left;
		font-size: 20px;
	}

	.single-left1 h3 {
		font-size: 40px;
		margin: 15px 0 15px -900px;
		display: block;
		color:white;
		

	}

	.w3l-blog-single-post-main .admin-list {
		display: flex; /* Sắp xếp các li trên cùng một hàng ngang */
		margin: 0 307px 23px;
		padding: 0;
		border-bottom: 1px solid #ececec;
	}

		.w3l-blog-single-post-main .admin-list li {
			margin: 0 10px;
		}

	.aside-title {
		margin: 70px 307px 30px 0;
		line-height: 30px;
		text-transform: capitalize;
		color: wheat;
		margin-left: 10px;
	
	}

	/* CSS cho phần bình luận */
	/* CSS cho phần bình luận */
	.binhluan {
		margin-bottom: -17px;
		padding: 10px;
		max-width: 53%; /* Chiều ngang tối đa là 1/3 */
		padding-left: 80px;
	}

		.binhluan h4 {
			margin: 0;
			font-size: 20px;
			font-weight: bold;
			color: white;
		}

		.binhluan ul {
			list-style: none;
			margin: 0;
			padding: 0;
		}

		.binhluan li {
			display: inline-block;
			margin-right: 10px;
			color:white;
		}

			.binhluan li i {
				margin: 0 5px;
			}

		.binhluan p {
			margin-top: 10px;
			color: white;
		}

		.binhluan a.replay {
			padding: 10px 20px;
			background: #cec9bddb;
			color: #713e3e;
			border: none;
			border-radius: 10px;
			cursor: pointer;
			font-size: 16px;
		}

			.binhluan a.replay:hover {
				text-decoration: underline;
				background-color: #ad996adb;
			}

	/* CSS cho biểu mẫu bình luận */
	form {
		margin-bottom: 20px;
		padding-left: 80px;
	}

	.d-grid-2 {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 10px;
	}

	.form-group {
		margin-bottom: 15px;
	}

	/* Chiều ngang của các phần tử input và textarea chỉ chiếm 1/2 so với hiện tại */
	.form-control {
		width: 30%;
		padding: 8px;
		border: 1px solid #ccc;
		border-radius: 4px;
		font-size: 14px;
	}

	textarea.form-control {
		resize: vertical; /* Cho phép điều chỉnh chiều cao dọc của textarea */
	}

	.btn {
		padding: 10px 20px;
		background: #cec9bddb;
		color: #713e3e;
		border: none;
		border-radius: 10px;
		cursor: pointer;
		font-size: 16px;
	}

		/* Tùy chỉnh kiểu dáng khi hover vào nút */
		.btn:hover {
			background-color: #ad996adb;
			text-decoration: underline
		}

	.linho{
		color:aliceblue;
		font-size: 20px;
	}
</style>
<div class="blog-post-single-61">
	<div class="wrapper">
		<div style="margin: 8px auto; display: block; text-align:center;">

			<!---728x90--->


		</div>
		<!-- left side blog post content -->
		<div class="single-left">
			<div class="single-left1 box13">
				<div>
					<a href="#"><img src="~/@Model.Image" alt="" class="img-responsive"></a>
				</div>

				<h3 class="card-title"> @Model.Title </h3>
				<div class="w3l-blog-single-post-main">
					<ul class="admin-list">
						<li><a href="#" class="linho"><span class="fa fa-calendar" aria-hidden="true"></span>@Model.Date</a></li>
						<li><a href="#" class="linho"><span class="fa fa-user" aria-hidden="true"></span>@(Model.AuthorArtWork?.Artist ?? "unknow")</a></li>
						<li>
							<a href="#" class="linho">
								<span class="fa fa-commenting-o" aria-hidden="true"></span>@(Model.CommentBlogs?.Count??0)
								Comments
							</a>
						</li>
					</ul>
				</div>
				<p class="Mota">
					@Model.Description
				</p>

			</div>
			<div class="comments">
				<h3 class="aside-title ">Recent Comments</h3>
					@if(Model.CommentBlogs?.Count>0)
					{
						foreach(var comment in Model.CommentBlogs)
						{
							<div class="binhluan">
								<h4>@comment.Name</h4>
								<ul class="my-2">
									<li class="font-weight-bold">
										@comment.DatePosted.ToString("yyyy/dd/MM HH:mm:ss")
									</li>

								</ul>
								<p>@comment.Message</p>
								<a href="#comment" class="replay">Reply</a>
							</div>
						}
					}
		
			</div>
			<div class="leave-coment-form" id="comment">
				<h3 class="aside-title">Write Your Comment</h3>
				<form action="@Url.Action("PostComment","DetailsView",new {blogId = Model.BlogId})" method="post">
					<div class="d-grid- grid-col-2">
						<div class="form-group">
							<input type="text" name="Name" class="form-control" placeholder="Name" required="" fdprocessedid="6s76t7">
						</div>
						<div class="form-group">
							<input type="email" name="Email" class="form-control" placeholder="Email" required="" fdprocessedid="hdmtk">
						</div>
					</div>
					<div class="form-group">
						<textarea name="Message" class="form-control" placeholder="Your comment here..." required=""></textarea>
					</div>
					<div class="mm_single_submit">
						<button type="submit" class="btn" fdprocessedid="0aoa7l">Post Comment</button>
					</div>
				</form>
			</div>
		</div>
		<!-- left side blog post content -->
	</div>
	<!-- //blog-post-single-61 -->
	<div style="margin: 8px auto; display: block; text-align:center;">

		<!---728x90--->


	</div>
</div>


