@{
}
@model Cart
@if (Model?.CartItems != null)
   {
                    
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products  <span style="float:right" class="badge">@Model?.CartItems.Count</span></h5>
                        @foreach (var item in Model?.CartItems)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@item.ArtWork.ArtName</p>
                                <p>$@item.ArtWork.ArtPrice</p>
                            </div>
                        }
                        <hr class="mt-0">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">$@Model?.ComputeTotalValues()</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold">$@(Model?.ComputeTotalValues() + 10)</h5>
                        </div>
                    </div>
  }else{
    <div>
        You do not have any products. Please return to the<a style="color: #00f;" asp-area="" asp-controller="Home" asp-action="Store">Store</a> page to select products
    </div>
}