<!DOCTYPE html>
<html lang="en">
<head>

    <style>
        .success-message {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999;
        }

            .success-message::before {
                content: "";
                display: block;
                width: 600px;
                height: 337px;
                background-image: url('https://www.bing.com/images/blob?bcid=r154.02sa-gFLMmsB77sMiecpBIn.....7U'); /* Replace with the actual path to your cat image */
                background-size: cover;
                position: absolute;
                bottom: -120px;
                left: 50%;
                transform: translateX(-50%);
            }

        .success-text {
            color: white;
            padding: 10px;
            text-align: center;
            position: absolute;
            bottom: -30px;
            left: 50%;
            transform: translateX(-50%);
        }
    </style>
</head>

<body>

    @RenderBody()
    <div class="success-message">
        <div class="success-text">
            <h3>Successful purchase</h3>
            <p>Your purchase was successful! Thank you for your order.</p>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/alime.bundle.js"></script>
    <script src="/js/default-assets/active.js"></script>

    <script>
        $(document).ready(function () {
            $('.success-message').fadeIn(1000);
            setTimeout(function () {
                $('.success-message').fadeOut(1000, function () {
                    // Redirect to the home page after the message is hidden
                    window.location.href = '/Users/Index';
                });
            }, 5000);
        });
    </script>
</body>
</html>
