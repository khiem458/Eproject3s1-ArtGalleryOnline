                <div class="modal-content">
                    <div class="modal-body">
                        <!-- Close -->
                        <button type="button" class="btn close-btn" data-dismiss="modal"><i class="ti-close"></i></button>
                        <!-- Form -->
                        @using (Html.BeginForm("Store", "Users", FormMethod.Get))
                        {
                            <input type="search" name="searchString" class="form-control" placeholder="Search and hit enter...">
                            <button type="submit">Search</button>
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>

    
    @RenderBody()


