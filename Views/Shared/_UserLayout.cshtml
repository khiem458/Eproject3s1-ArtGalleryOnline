<!DOCTYPE html>
<html lang="en">
@model ArtGalleryOnline.ModelsView.UserArtworkViewModels;
<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
   
    <!-- Title -->
    <title>Alime - Photography HTML Template</title>

    <!-- Favicon -->
    <link rel="icon" href="/img/core-img/Logo3.jpg">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="/style.css">
     <style>
        /* Định dạng cho chữ "ART" */
        .logo-text {
            font-size: 36px; /* Điều chỉnh kích thước chữ theo ý muốn */
            color: #ff6600; /* Màu cam, bạn có thể thay đổi mã màu tùy ý */
