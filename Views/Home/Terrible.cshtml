<style>
    body {
        background-color: black; /* Replace 'wooden-background.jpg' with the actual path to your wooden background image */
        background-size: cover;
        background-repeat: no-repeat;
    }
    /* Thêm bóng đậm vào khung hình */
    .alime-portfolio-area .single_gallery_item {
        box-shadow: 0 20px 15px rgba(0, 0, 0, 0);
    }

        /* Tạo viền màu trắng cho khung ngoài */
        .alime-portfolio-area .single_gallery_item .single-portfolio-content {
            border: 20px solid #fff;
        }

            /* Tạo khoảng cách giữa khung ảnh và viền trắng */
