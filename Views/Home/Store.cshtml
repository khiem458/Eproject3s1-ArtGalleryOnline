@model IEnumerable<ArtGalleryOnline.Models.ArtWork>
@{
    ViewData["Title"] = "Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<style>
    body {
        background-size: cover;
        background-repeat: no-repeat;
        background-color: black;
    }

    .alime-blog-area .row .col-12,
    .alime-blog-area .row .col-sm-6,
    .alime-blog-area .row .col-lg-4 {
        flex-basis: 33.33%;
        max-width: 33.33%;
    }


    /* Tạo khoảng cách giữa các cột */
    .alime-blog-area .row .col-12,
    .alime-blog-area .row .col-sm-6,
    .alime-blog-area .row .col-lg-4 {
        padding: 15px;
    }

    /* Thêm khung cho phần tử single-post-area */
    .single-post-area {
        border: 1px solid #ccc;
        padding: 20px;
    }

    #pd_card img {
        width: 100%; /* Định rõ chiều rộng hình ảnh là 100% của card */
        height: 300px; /* Giữ tỷ lệ khung hình ban đầu */
        border-radius: 10px;
    }

    .single-post-area::after {
        position: absolute;
        width: 100%;
        height: 342px;
        border-radius: 5px;
        top: 0;
        left: 0;
        background-color: rgba(0, 0, 0, 0.1);
        content: '';
        z-index: 1;
    }
</style>
<!-- Welcome Area Start -->
<section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(/img/code-mg/hinh47.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content text-center">
                    <h2 class="page-title">Shop</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="~/Home"><i class="icon_house_alt"></i> Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Shop</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Welcome Area End -->
<!-- Gallery Area Start -->



<div class="alime-portfolio-area section-padding-80 clearfix">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Projects Menu -->
                @(await Component.InvokeAsync("Category"))
            </div>
        </div>
        <div class="container">
            <div class="row  ">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-lg-4">
                        <!-- Single Blog Area -->
                        <div class="single-post-area wow fadeInUpBig" data-wow-delay="100ms" id="pd_card">
                            <!-- Post Thumbnail -->
                            <a href="~/DetailsView/ArtWorkDetails?id=@item.ArtId" class="post-thumbnail"><img src="~/@item.ArtImage" alt=""></a>
                            <!-- Post Catagory -->
                            <a href="#" class="btn post-catagory cartWidget" id="cartWidget">Add</a>
                            <!-- Post Conetent -->
                            <div class="post-content">
                                <div class="post-meta">
                                    <a href="~/DetailsView/ArtWorkDetails?id=@item.ArtId" >@item.ArtName</a>
                                </div>
                                <a href="#" class="post-title">$@item.ArtPrice</a>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center wow fadeInUp" data-wow-delay="700ms">
                <a href="#" class="btn alime-btn btn-2 mt-15">View More</a>
            </div>
        </div>
    </div>
</div>
<script>
    // Attach an event listener to elements with the class "cartWidget"
    var cartWidgets = document.querySelectorAll(".cartWidget");
    cartWidgets.forEach(function (widget) {
        widget.addEventListener("click", function () {
            // Display SweetAlert dialog
            Swal.fire({
                title: 'Sorry!',
                text: 'You Must Login First Before Buying',
                icon: 'info'
            });
        });
    });
</script>