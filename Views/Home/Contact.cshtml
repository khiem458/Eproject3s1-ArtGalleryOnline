@model Contact
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Conactus info</h2>
            <p> Công ty</p>
            <p> địa chỉ</p>
            <p> số điện thoại:</p>
            <h2>@ViewBag.SuccessMessage</h2>
            <h2>@ViewBag.ErrorMessage</h2>
            <form>
                <div class="form-group"> 
                    <label asp-for="@Model.ContactName">Name</label>
                    <input type="text" asp-for="@Model.ContactName" id="txtName" class="form-control" placeholder="Enter your name" />
                </div>
                <div class="form-group"> 
                    <label asp-for="@Model.ContactPhone">phone number</label>
                    <input type="text" asp-for="@Model.ContactPhone" id=" txtphone" class="form-control" placeholder="Enter your phonenumber" />
                </div>
                <div class="form-group"> 
                    <label asp-for="@Model.ContactEmail">Email</label>
                    <input type="text" asp-for="@Model.ContactEmail" id="txtEmail" class="form-control" placeholder="Enter your Email" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description">Description</label>
                    <textarea id="textDesription" asp-for="@Model.Description" class="form-control" placeholder="Enter your Desription"/></textarea>
                </div>
                <button type="submit" id="btnSend" class=" btn btn-success">sendmail</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2> Bản đồ</h2>
        </div>

     
    </div>
</div>
