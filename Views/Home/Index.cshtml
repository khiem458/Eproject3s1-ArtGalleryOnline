        justify-content: center;
        align-items: center;
        flex-direction: column;
        text-align: center;
        padding-left: 37px;
    }

    .entry-title {
        margin-bottom: 10px;

    }

    .entry-title h3 {
        font-size: 50px; /* Chỉnh kích thước phù hợp */
            color: #dcd7cf;
             text-decoration: none;
            font-family: Arial, sans-serif;
    }
    .entry-body {
        margin-bottom: 20px;
    }

    .type1.dt-sc-button.small {
        align-self: center;
    }

    .type1.dt-sc-button.small {
        display: inline-block;
        padding: 10px 20px;
        background-color: #e74c3c ;
        color: #d7cece;
        text-decoration: none;
        transition: background-color 0.3s, transform 0.3s;
        border-radius: 10px;
    }

    .type1.dt-sc-button.small:hover {
        background-color: #8d6666;
        transform: scale(1.1);
    }

    .entry-thumb img {
        transition: transform 0.3s ease;
    }

        .entry-thumb img:hover {
            transform: scale(1.1);
        }

    /*About me*/
    .about-section {
        display: flex;
        justify-content: center; /* Căn giữa div theo chiều ngang */
        align-items: center; /* Căn giữa div theo chiều dọc */
