        margin-right: 20px;
    }

    .entry-title {
        margin-bottom: 10px;
    }

    .entry-body {
        margin-bottom: 15px;
    }

    .type1.dt-sc-button.small {
        display: inline-block;
    }
    
    .entry-details {
