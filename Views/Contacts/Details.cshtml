@model ArtGalleryOnline.Models.Contact

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* ... Các phần CSS khác ... */

    /* CSS cho các thẻ dt và dd */
    .info-section dl dt {
        font-weight: bold;
        font-size: 18px; /* Cỡ chữ của nhãn */
        color: #000; /* Màu chữ của nhãn */
    }

    .info-section dl dd {
        margin-bottom: 10px;
        font-size: 16px; /* Cỡ chữ của dữ liệu */
        color: #fff; /* Màu chữ của dữ liệu */
    }

    /* ... Các phần CSS khác ... */
</style>
<div class="card mb-4">
    <div class="card-body">
        <h1 class="card-title ">Details</h1>
        <dl class="row justify-content-center">
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.ContactEmail)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactEmail)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.ContactPhone)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPhone)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Description)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ContactName" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
</div>