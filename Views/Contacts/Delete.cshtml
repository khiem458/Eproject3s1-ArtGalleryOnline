@model ArtGalleryOnline.Models.Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-body">
        <h1 class="card-title ">Delete</h1>
        <h3 class="card-subtitle mb-2 text-muted ">Are you sure you want to delete this?</h3>
        <dl class="row justify-content-center">
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.ContactEmail)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactEmail)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.ContactPhone)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPhone)
        </dd>
        <dt class="col-sm-2">
            <strong>@Html.DisplayNameFor(model => model.Description)</strong>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ContactName" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
</div>